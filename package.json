{
  "name": "dsalta-backend-task",
  "version": "1.0.0",
  "private": true,
  "description": "DSALTA-style compliance tasks & evidence API (Node.js + TypeScript + TSOA + PostgreSQL)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run tsoa:gen && ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "npm run tsoa:gen && tsc && npm run copy:swagger",
    "start": "node dist/server.js",
    "tsoa:routes": "tsoa routes",
    "tsoa:spec": "tsoa spec",
    "tsoa:gen": "npm run tsoa:routes && npm run tsoa:spec",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "seed": "ts-node prisma/seed.ts",
    "copy:swagger": "node scripts/copy-swagger.mjs",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.12",
    "@types/swagger-ui-express": "^4.1.6",
    "prisma": "^5.18.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}